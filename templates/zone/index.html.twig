{% extends 'base.html.twig' %}

{% block title %}Zone index{% endblock %}

{% block body %}
    <h1>Zone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Space_type</th>
                <th>Ru</th>
                <th>Surface</th>
                <th>Uniformity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.name }}</td>
                <td>{{ zone.spaceType }}</td>
                <td>{{ zone.ru }}</td>
                <td>{{ zone.surface }}</td>
                <td>{{ zone.uniformity }}</td>
                <td>
                    <a href="{{ path('app_zone_show', {'id': zone.id}) }}">show</a>
                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_zone_new') }}">Create new</a>
{% endblock %}
