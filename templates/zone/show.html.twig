{% extends 'base.html.twig' %}

{% block title %}{{ zone.name }} - Zone{% endblock %}

{% block breadcrumb %}
<nav class="px-8 pt-6" aria-label="Fil d'Ariane">
    <ol class="flex items-center gap-2 text-sm flex-wrap">
        <li class="flex items-center gap-2">
            <a href="{{ path('home') }}" class="text-stone-400 hover:text-white transition-colors">Accueil</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="flex items-center gap-2">
            <a href="{{ path('app_zone_index') }}" class="text-stone-400 hover:text-white transition-colors">Liste des zones</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="text-white font-medium">{{ zone.name }}</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-6xl mx-auto">
        {# Header #}
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-white">{{ zone.name }}</h1>
        </div>

        {# Grid 2 colonnes #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {# Carte Informations Zone #}
            <div class="bg-gradient-to-br from-stone-800/90 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-emerald-600/30 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </div>
                    <h2 class="text-xl font-semibold text-white">Informations</h2>
                </div>

                <div class="space-y-4">
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Nom</span>
                        <span class="text-white font-medium">{{ zone.name }}</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Surface</span>
                        <span class="text-white font-medium">{{ zone.surface }} m²</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Type d'espace</span>
                        <span class="text-emerald-400 font-medium">{{ zone.spaceType|replace({'_': ' '})|capitalize }}</span>
                    </div>
                    {% if zone.lat and zone.long %}
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Coordonnees</span>
                        <span class="text-white font-medium text-sm">{{ zone.lat|number_format(4) }}, {{ zone.long|number_format(4) }}</span>
                    </div>
                    {% endif %}
                </div>

                {# Actions #}
                <div class="mt-6 flex flex-wrap gap-3">
                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}" class="flex-1 inline-flex items-center justify-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded-xl transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Modifier
                    </a>
                    <form method="post" action="{{ path('app_zone_delete', {'id': zone.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette zone?');" class="flex-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}">
                        <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-red-600/80 hover:bg-red-600 text-white py-2 px-4 rounded-xl transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>

            {# Carte Meteo #}
            <div class="bg-gradient-to-br from-amber-800/40 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-amber-600/30 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-white">Meteo du jour</h2>
                        {% if meteo %}
                            <p class="text-xs text-stone-400">Mise a jour: {{ meteo.date|date('d/m/Y') }}</p>
                        {% endif %}
                    </div>
                </div>

                {% if meteo %}
                    <div class="grid grid-cols-2 gap-4">
                        {# Temperature #}
                        <div class="bg-stone-800/50 rounded-xl p-4">
                            <div class="flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                                <span class="text-stone-400 text-sm">Temperature</span>
                            </div>
                            <span class="text-2xl font-bold text-white">{{ meteo.tC ?? '-' }}°C</span>
                        </div>

                        {# Ensoleillement #}
                        <div class="bg-stone-800/50 rounded-xl p-4">
                            <div class="flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                                </svg>
                                <span class="text-stone-400 text-sm">Ensoleillement</span>
                            </div>
                            <span class="text-2xl font-bold text-white">{{ meteo.sunHours ?? '-' }}h</span>
                        </div>

                        {# Humidite #}
                        <div class="bg-stone-800/50 rounded-xl p-4">
                            <div class="flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                </svg>
                                <span class="text-stone-400 text-sm">Humidite</span>
                            </div>
                            <span class="text-2xl font-bold text-white">{{ meteo.hrPct ?? '-' }}%</span>
                        </div>

                        {# Vent #}
                        <div class="bg-stone-800/50 rounded-xl p-4">
                            <div class="flex items-center gap-2 mb-2">
                                <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10l-2 1m0 0l-2-1m2 1v2.5M20 7l-2 1m2-1l-2-1m2 1v2.5M14 4l-2-1-2 1M4 7l2-1M4 7l2 1M4 7v2.5M12 21l-2-1m2 1l2-1m-2 1v-2.5M6 18l-2-1v-2.5M18 18l2-1v-2.5"/>
                                </svg>
                                <span class="text-stone-400 text-sm">Vent</span>
                            </div>
                            <span class="text-2xl font-bold text-white">{{ meteo.wind ?? '-' }} km/h</span>
                        </div>

                        {# Probabilite pluie - pleine largeur #}
                        <div class="col-span-2 bg-gradient-to-r from-blue-900/50 to-blue-800/30 rounded-xl p-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
                                    </svg>
                                    <span class="text-stone-300">Probabilite de pluie (24h)</span>
                                </div>
                                <span class="text-2xl font-bold text-blue-300">{{ meteo.rainProb ?? '-' }}%</span>
                            </div>
                            {% if meteo.rain is not null and meteo.rain > 0 %}
                            <p class="text-sm text-stone-400 mt-2">Cumul prevu: {{ meteo.rain }} mm</p>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-8">
                        <svg class="w-16 h-16 text-stone-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
                        </svg>
                        <p class="text-stone-400">Aucune donnee meteo disponible</p>
                        <p class="text-stone-500 text-sm mt-2">Ajoutez des coordonnees GPS a la zone pour obtenir la meteo</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Planning d'arrosage hebdomadaire #}
        <div class="mt-6 bg-gradient-to-br from-emerald-900/40 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-emerald-600/30 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div>
                    <h2 class="text-xl font-semibold text-white">Planning d'arrosage</h2>
                    <p class="text-xs text-stone-400">Configurez les jours et horaires d'arrosage</p>
                </div>
            </div>

            {% set wd = zone.weeklyDecision %}
            <form method="post" action="{{ path('app_weekly_decision_update', {'id': zone.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('weekly_decision_' ~ zone.id) }}">

                {# Tableau des jours #}
                <div class="overflow-x-auto mb-6">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-stone-700/50">
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Lun</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Mar</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Mer</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Jeu</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Ven</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Sam</th>
                                <th class="text-center py-3 px-2 text-stone-400 font-medium text-sm">Dim</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="monday" class="sr-only peer" {{ wd and wd.monday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="tuesday" class="sr-only peer" {{ wd and wd.tuesday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="wensday" class="sr-only peer" {{ wd and wd.wensday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="thursday" class="sr-only peer" {{ wd and wd.thursday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="friday" class="sr-only peer" {{ wd and wd.friday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="saturday" class="sr-only peer" {{ wd and wd.saturday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                                <td class="text-center py-4 px-2">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input type="checkbox" name="sunday" class="sr-only peer" {{ wd and wd.sunday ? 'checked' : '' }}>
                                        <div class="w-11 h-6 bg-stone-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-stone-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-600"></div>
                                    </label>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                {# Heure et duree #}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div>
                        <label for="starting_time" class="block text-sm font-medium text-stone-400 mb-2">Heure de demarrage</label>
                        <input type="time" name="starting_time" id="starting_time"
                               value="{{ wd and wd.startingTime ? wd.startingTime|date('H:i') : '' }}"
                               class="w-full bg-stone-800/50 border border-stone-700 rounded-xl px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
                    </div>
                    <div>
                        <label for="spray_duration" class="block text-sm font-medium text-stone-400 mb-2">Duree d'arrosage (minutes)</label>
                        <input type="number" name="spray_duration" id="spray_duration" min="1" max="120"
                               value="{{ wd and wd.sprayDuration ? wd.sprayDuration : '' }}"
                               placeholder="Ex: 30"
                               class="w-full bg-stone-800/50 border border-stone-700 rounded-xl px-4 py-3 text-white placeholder-stone-500 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent">
                    </div>
                </div>

                <button type="submit" class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded-xl transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Enregistrer le planning
                </button>
            </form>
        </div>

        {# Historique des bilans hydroliques #}
        <div class="mt-6 bg-gradient-to-br from-blue-900/40 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
            <div class="flex items-center justify-between mb-6">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-blue-600/30 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-white">Historique des bilans</h2>
                        <p class="text-xs text-stone-400">Decisions d'arrosage</p>
                    </div>
                </div>
                <a href="{{ path('app_hydrolique_calculate_zone', {'id': zone.id}) }}"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-xl transition-colors text-sm">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    Calculer
                </a>
            </div>

            {% if bilans is not empty %}
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-stone-700/50">
                                <th class="text-left py-3 px-4 text-stone-400 font-medium text-sm">Date</th>
                                <th class="text-left py-3 px-4 text-stone-400 font-medium text-sm">Decision</th>
                                <th class="text-right py-3 px-4 text-stone-400 font-medium text-sm">Volume</th>
                                <th class="text-right py-3 px-4 text-stone-400 font-medium text-sm">Stock</th>
                                <th class="text-right py-3 px-4 text-stone-400 font-medium text-sm">ETc</th>
                                <th class="text-right py-3 px-4 text-stone-400 font-medium text-sm">Pluie eff.</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for bilan in bilans %}
                            <tr class="border-b border-stone-700/30 hover:bg-stone-800/30 transition-colors">
                                <td class="py-3 px-4 text-white">{{ bilan.date|date('d/m/Y') }}</td>
                                <td class="py-3 px-4">
                                    {% if bilan.decision == 'ARROSER' %}
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-300">
                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"/>
                                            </svg>
                                            Arroser
                                        </span>
                                    {% elseif bilan.decision == 'REPORTER' %}
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-amber-500/20 text-amber-300">
                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                                            </svg>
                                            Reporter
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium bg-stone-500/20 text-stone-300">
                                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                            </svg>
                                            Annuler
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-right text-white font-medium">
                                    {% if bilan.volume > 0 %}
                                        {{ bilan.volume }} L
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-right text-stone-300">{{ bilan.stock }} mm</td>
                                <td class="py-3 px-4 text-right text-stone-300">{{ bilan.etc }} mm</td>
                                <td class="py-3 px-4 text-right text-stone-300">{{ bilan.rain }} mm</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-8">
                    <svg class="w-16 h-16 text-stone-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    <p class="text-stone-400">Aucun bilan disponible</p>
                    <p class="text-stone-500 text-sm mt-2">Cliquez sur "Calculer" pour generer le premier bilan</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
