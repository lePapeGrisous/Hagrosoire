{% extends 'base.html.twig' %}

{% block title %}Nouveau Capteur{% endblock %}

{% block breadcrumb %}
<nav class="px-8 pt-6" aria-label="Fil d'Ariane">
    <ol class="flex items-center gap-2 text-sm flex-wrap">
        <li class="flex items-center gap-2">
            <a href="{{ path('home') }}" class="text-stone-400 hover:text-white transition-colors">Accueil</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="flex items-center gap-2">
            <a href="{{ path('app_sensor_index') }}" class="text-stone-400 hover:text-white transition-colors">Liste des capteurs</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="text-white font-medium">Nouveau capteur</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-2xl mx-auto">
        {# Header #}
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-white">Nouveau capteur</h1>
            <p class="text-stone-400 mt-2">Enregistrez un nouveau capteur d'humidite</p>
        </div>

        {# Formulaire #}
        <div class="bg-gradient-to-br from-stone-800/90 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
            {{ include('sensor/_form.html.twig', {'button_label': 'Creer le capteur'}) }}
        </div>
    </div>
</div>
{% endblock %}
