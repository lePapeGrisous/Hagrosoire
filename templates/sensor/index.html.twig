{% extends 'base.html.twig' %}

{% block title %}Capteurs{% endblock %}

{% block breadcrumb %}
<nav class="px-8 pt-6" aria-label="Fil d'Ariane">
    <ol class="flex items-center gap-2 text-sm flex-wrap">
        <li class="flex items-center gap-2">
            <a href="{{ path('home') }}" class="text-stone-400 hover:text-white transition-colors">Accueil</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="text-white font-medium">Liste des capteurs</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="min-h-screen">
    <h1 class="text-3xl font-bold text-white m-8 mt-2">Capteurs</h1>
    <div class="max-w-6xl mx-auto gap-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3  px-8">
        {% for sensor in sensors %}
            <div class="bg-gradient-to-br from-stone-800/90 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl mb-6">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-blue-600/30 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <h2 class="text-xl font-semibold text-white">{{ sensor.name }}</h2>
                </div>

                <div class="space-y-4">
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">ID</span>
                        <span class="text-white font-medium">{{ sensor.id }}</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Date</span>
                        <span class="text-white font-medium">{{ sensor.date ? sensor.date|date('Y-m-d H:i:s') : 'Non disponible' }}</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Température</span>
                        <span class="text-blue-400 font-medium">{{ sensor.temperature }}°C</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Humidité</span>
                        <span class="text-white font-medium">{{ sensor.humidity }}%</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Batterie</span>
                        <span class="text-white font-medium">{{ sensor.batterie }}%</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Latitude</span>
                        <span class="text-white font-medium text-sm">{{ sensor.latitude|number_format(4) }}</span>
                    </div>
                    <div class="flex justify-between items-center py-3 border-b border-stone-700/50">
                        <span class="text-stone-400">Longitude</span>
                        <span class="text-white font-medium text-sm">{{ sensor.longitude|number_format(4) }}</span>
                    </div>
                </div>

                {# Actions #}
                <div class="mt-6 flex flex-wrap gap-3">
                    <a href="{{ path('app_sensor_show', {'id': sensor.id}) }}" class="flex-1 inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-xl transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Voir
                    </a>
                    <a href="{{ path('app_sensor_edit', {'id': sensor.id}) }}" class="flex-1 inline-flex items-center justify-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded-xl transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Modifier
                    </a>
                    <form method="post" action="{{ path('app_sensor_delete', {'id': sensor.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce capteur?');" class="flex-1">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sensor.id) }}">
                        <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-red-600/80 hover:bg-red-600 text-white py-2 px-4 rounded-xl transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="text-center py-12">
                <p class="text-stone-400 mb-6">Aucun capteur disponible.</p>
                <a href="{{ path('app_sensor_new') }}" class="inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-xl transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Créer un nouveau capteur
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
