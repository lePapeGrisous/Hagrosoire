{% extends 'base.html.twig' %}

{% block title %}{{ sensor.name }} - Capteur{% endblock %}

{% block breadcrumb %}
<nav class="px-8 pt-6" aria-label="Fil d'Ariane">
    <ol class="flex items-center gap-2 text-sm flex-wrap">
        <li class="flex items-center gap-2">
            <a href="{{ path('home') }}" class="text-stone-400 hover:text-white transition-colors">Accueil</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="flex items-center gap-2">
            <a href="{{ path('app_sensor_index') }}" class="text-stone-400 hover:text-white transition-colors">Liste des capteurs</a>
            <svg class="w-4 h-4 text-stone-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </li>
        <li class="text-white font-medium">{{ sensor.name }}</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
<div class="min-h-screen p-4 md:p-8">
    <div class="max-w-4xl mx-auto">
        {# Header #}
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-white">{{ sensor.name }}</h1>
            <p class="text-stone-400 mt-2">Derniere mise a jour : {{ sensor.date ? sensor.date|date('d/m/Y H:i') : 'Non disponible' }}</p>
        </div>

        {# Carte principale #}
        <div class="bg-gradient-to-br from-stone-800/90 to-stone-900/90 backdrop-blur-sm rounded-2xl p-6 shadow-xl">
            <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 bg-amber-600/30 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                    </svg>
                </div>
                <h2 class="text-xl font-semibold text-white">Donnees du capteur</h2>
            </div>

            {# Grille des mesures #}
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                {# Humidite #}
                <div class="bg-blue-900/30 rounded-xl p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                        <span class="text-stone-400 text-sm">Humidite</span>
                    </div>
                    <span class="text-2xl font-bold text-white">{{ sensor.humidity }}%</span>
                </div>

                {# Temperature #}
                <div class="bg-red-900/30 rounded-xl p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                        <span class="text-stone-400 text-sm">Temperature</span>
                    </div>
                    <span class="text-2xl font-bold text-white">{{ sensor.temperature }}Â°C</span>
                </div>

                {# Batterie #}
                <div class="bg-green-900/30 rounded-xl p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                        </svg>
                        <span class="text-stone-400 text-sm">Batterie</span>
                    </div>
                    <span class="text-2xl font-bold text-white">{{ sensor.batterie }}%</span>
                </div>

                {# Position #}
                <div class="bg-emerald-900/30 rounded-xl p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span class="text-stone-400 text-sm">Position</span>
                    </div>
                    <span class="text-sm font-medium text-white">{{ sensor.latitude|number_format(4) }}, {{ sensor.longitude|number_format(4) }}</span>
                </div>
            </div>

            {# Actions #}
            <div class="flex flex-wrap gap-3 pt-4 border-t border-stone-700/50">
                <a href="{{ path('app_sensor_edit', {'id': sensor.id}) }}" class="flex-1 inline-flex items-center justify-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white py-2 px-4 rounded-xl transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Modifier
                </a>
                <form method="post" action="{{ path('app_sensor_delete', {'id': sensor.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce capteur?');" class="flex-1">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sensor.id) }}">
                    <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-red-600/80 hover:bg-red-600 text-white py-2 px-4 rounded-xl transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
