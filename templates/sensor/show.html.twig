{% extends 'base.html.twig' %}

{% block title %}Sensor{% endblock %}

{% block body %}
    <h1>Sensor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sensor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sensor.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ sensor.date ? sensor.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ sensor.humidity }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ sensor.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ sensor.latitude }}</td>
            </tr>
            <tr>
                <th>Batterie</th>
                <td>{{ sensor.batterie }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ sensor.temperature }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sensor_index') }}">back to list</a>

    <a href="{{ path('app_sensor_edit', {'id': sensor.id}) }}">edit</a>

    {{ include('sensor/_delete_form.html.twig') }}
{% endblock %}
