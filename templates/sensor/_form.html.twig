<script>
document.getElementById('sensor-geolocate-btn').addEventListener('click', function() {
    const statusEl = document.getElementById('sensor-geoloc-status');
    const latInput = document.getElementById('sensor_latitude');
    const longInput = document.getElementById('sensor_longitude');

    if (!navigator.geolocation) {
        statusEl.textContent = 'La geolocalisation n\'est pas supportee par votre navigateur.';
        statusEl.className = 'text-sm text-red-400';
        return;
    }

    statusEl.textContent = 'Recuperation en cours...';
    statusEl.className = 'text-sm text-stone-400';

    navigator.geolocation.getCurrentPosition(
        function(position) {
            latInput.value = position.coords.latitude;
            longInput.value = position.coords.longitude;
            statusEl.textContent = 'Localisation recuperee !';
            statusEl.className = 'text-sm text-emerald-400';
        },
        function(error) {
            let message = 'Erreur de geolocalisation';
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    message = 'Acces a la localisation refuse.';
                    break;
                case error.POSITION_UNAVAILABLE:
                    message = 'Position indisponible.';
                    break;
                case error.TIMEOUT:
                    message = 'Delai d\'attente depasse.';
                    break;
            }
            statusEl.textContent = message;
            statusEl.className = 'text-sm text-red-400';
        }
    );
});
</script>
